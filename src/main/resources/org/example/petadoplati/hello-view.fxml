<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="601.0" prefWidth="1331.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.petadoplati.HelloController">
    <children>
        <!-- Title Label -->
        <Label layoutX="547.0" layoutY="14.0" text="Pet Adoption System">
            <font>
                <Font name="Arial Bold" size="36.0" />
            </font>
        </Label>

        <!-- Type Filter ComboBox -->
        <ComboBox fx:id="typeFilterComboBox" layoutX="12.0" layoutY="96.0" />

        <!-- Pets TableView -->
        <TableView fx:id="petsTableView" layoutX="12.0" layoutY="136.0" prefHeight="400" prefWidth="499.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="breedColumn" text="Breed" />
                <TableColumn fx:id="typeColumn" text="Type" />
                <TableColumn fx:id="ageColumn" text="Age" />
                <TableColumn fx:id="descriptionColumn" text="Description" />
            </columns>
        </TableView>

        <!-- Buttons -->
        <Button layoutX="12.0" layoutY="546.0" onAction="#showAddPetDialog" text="Add Pet" />

        <Button fx:id="viewAdoptersButton" layoutX="1141.0" layoutY="519.0" onAction="#handleViewAdopters" prefHeight="26.0" prefWidth="101.0" text="View Adopters" />

        <Label layoutX="1141.0" layoutY="133.0" text="Adopter Details">
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Label>

        <ComboBox fx:id="adopterIdComboBox" layoutX="1144.0" layoutY="169.0" promptText="Select Adopter ID" />
        <TextField fx:id="adopterNameField" layoutX="1144.0" layoutY="210.0" promptText="Name" />
        <TextField fx:id="adopterContactField" layoutX="1144.0" layoutY="260.0" promptText="Contact Info" />

        <Button layoutX="1144.0" layoutY="310.0" onAction="#handleAdoption" prefHeight="26.0" prefWidth="85.0" text="Adopt Pet" />

        <Label layoutX="1144.0" layoutY="360.0" text="Add Adopter">
            <font>
                <Font name="Arial" size="18" />
            </font>
        </Label>

        <TextField fx:id="addAdopterNameField" layoutX="1144.0" layoutY="390.0" promptText="Adopter Name" />
        <TextField fx:id="addAdopterContactField" layoutX="1144.0" layoutY="440.0" promptText="Adopter Contact Info" />

        <Button layoutX="1144.0" layoutY="480.0" onAction="#addAdopter" text="Add Adopter" />

        <TableView fx:id="adoptionRecordsTableView" layoutX="532.0" layoutY="135.0" prefHeight="400.0" prefWidth="581.0">
            <columns>
                <TableColumn fx:id="adoptionIdColumn" prefWidth="76.79998779296875" text="adoptionId" />
                <TableColumn fx:id="adopterNameColumn" prefWidth="93.5999755859375" text="Adopter name" />
                <TableColumn fx:id="petNameColumn" prefWidth="79.20001220703125" text="Pet name" />
                <TableColumn fx:id="petTypeColumn" prefWidth="80.79998779296875" text="Pet type" />
                <TableColumn fx:id="adoptionDateColumn" prefWidth="108.79998779296875" text="Adoption Date" />
                <TableColumn fx:id="adopterContactColumn" prefWidth="108.79998779296875" text="Adopter Contact" />
            </columns>
        </TableView>

        <Button layoutX="95.0" layoutY="545.0" onAction="#deleteButton" prefHeight="26.0" prefWidth="70.0" text="Delete" />


    </children>
</AnchorPane>
